<div class="xl:flex xl:justify-between">
    <h1 class="text-2xl font-bold">メンバーを閲覧</h1>
    <div class="mt-10">
      <%= render "shared/simple_team_card" %>
    </div>
</div>

<%= render 'teams/members/filters/forms'%>
<%=turbo_frame_tag "filtered-team-members" do%>
    <div class="flex items-center mb-3  justify-between xl:justify-start">
      <%= render 'teams/members/filters/found_members_counter' %>
      <%= link_to team_members_path(@team.uuid), class: "xl:ml-20 inline-flex flex items-center text-base xl:text-lg font-semibold rounded-md bg-blue-400 p-2 text-white duration-100 hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2" do%>
        <i class="fa-solid fa-user-group mr-1"></i>
        全員を表示
      <% end %>
    </div>
    <%= render 'teams/members/shared/members' %>
<% end %>