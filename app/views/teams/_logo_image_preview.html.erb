<div class="mt-5" data-controller="previews">
    <div class="flex items-start">
        <div class="mr-5">
          <%= f.label :logo, class: "block text-gray-700 text-sm font-medium mb-1" %>
          <%= f.file_field :logo, class: "mt-1 block w-60 border border-gray-300 rounded-md py-2 px-3 bg-white shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", direct_upload: true, data: { previews_target: "input", action: "change->previews#preview" } %>
        </div>
        <%= image_tag "", data: { previews_target: "preview" } %>
    </div>
</div>