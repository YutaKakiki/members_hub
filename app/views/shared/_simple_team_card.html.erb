<% if @team %>
    <div class="flex items-center bg-white  rounded-lg p-2 pr-7 border border-gray-200 w-auto mb-10">
        <div class="w-auto">
            <% if @team.logo.attached? %>
                <%= image_tag @team.logo.variant(resize_to_limit:[60,60]),class:"rounded-md mr-5" %>
            <% end %>
        </div>
        <div class="w-auto">
            <p class="text-xl font-semibold"><%= @team.name %></p>
        </div>
    </div>
<% end %>


