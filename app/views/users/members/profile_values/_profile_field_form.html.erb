<%profile_fields.map.with_index(1) do |profile_field,i|%>
    <% if profile_field.name == "生年月日" || profile_field.name == "名前" %>
      <% if profile_field.name == "生年月日" %>
        <%= f.label :content,profile_field.name, class: "block text-gray-700 text-sm font-medium mt-3" %>
        <%= f.date_field "content_#{i}",value:session["content_#{i}"] || "", start_year:Time.now.year - 100,end_year:Time.now.year, class: "block border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm w-96 min-w-72"%>
      <% else %>
        <%= f.label :content,profile_field.name, class: "block text-gray-700 text-sm font-medium mt-3",data:{target:"FormValidations.content#{i}"} %>
        <%= f.text_field "content_#{i}", value:current_user.name ||session["content_#{i}"] || "",class: "block border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm w-96 min-w-72"%>   
      <% end %>
    <% else %>
        <%= f.label :content,profile_field.name, class: "block text-gray-700 text-sm font-medium mt-3",data:{target:"FormValidations.content#{i}"} %>
        <%= f.text_field "content_#{i}", value:session["content_#{i}"] || "",class: "block border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm w-96 min-w-72"%>  
    <% end %>
<% end %>
