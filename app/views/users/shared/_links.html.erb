<div class="mt-20">
  <%- if controller_name != 'sessions' %>
    <p class="mb-3">アカウントをお持ちですか？</p>
    <%= link_to "ログイン", new_session_path(resource_name) ,class:"btn bg-blue-500 rounded p-2 px-4 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2",data:{frame_tag:"modal"}%><br />
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class="mb-3 text-base text-gray-500">アカウントを登録していないですか？</p>
    <%= link_to "新規登録", new_registration_path(resource_name),class:"btn bg-blue-500 rounded p-2 px-4  text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2",data:{frame_tag:"modal"} %><br />
  <% end %>

  <%#- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%#= link_to "Forgot your password?", new_password_path(resource_name) %><br />
  <%# end %>
<div>
<div class="my-8">
  <div class="border-b-2 border-gray-400 mb-4 xl:w-1/3 w-full inline-flex justify-center"></div>
  <p class="mb-3 text-base text-gray-500">SNSアカウントでサインインすることができます</p>
</div>
<%= render 'users/shared/social_signin' %>




</div>

</div>
