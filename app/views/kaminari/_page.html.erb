<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>

<%= link_to_unless current_page == page, page, url, class: "inline-block text-xl px-4 py-2 border border-gray-300 text-gray-600 hover:bg-gray-100 w-14 text-center" do %>
  <span class="inline-block px-4 py-2 border border-gray-300 bg-blue-400 text-white w-14 text-center text-xl"><%= page %></span>
<% end %>