<header class="bg-stone-50 h-20 flex shadow-md justify-between">
    <%= link_to root_path ,class:"flex items-center" do %>
        <h1 class="text-4xl font-bold text-black inline-flex pl-64">Members Hub</h1>
    <% end %>   

    <% if user_signed_in? %>
        <%= render 'layouts/components/icon' %>
    <% else %>
        <%#ログインページにいる場合はボタンを無効にする%>
        <% if current_page?(new_user_session_path) %> 
            <div class="flex items-center pr-32">
                <%= link_to 'ログイン', new_user_session_path ,class:"btn bg-gray-300 rounded p-2 px-4 text-white disabled cursor-not-allowed" %>
            </div>
        <% else %>
            <div class="flex items-center pr-32">
                <%= link_to 'ログイン', new_user_session_path ,class:"btn bg-blue-500 rounded p-2 px-4 text-white"%>
            </div>
        <% end %>
    <% end %>
</header>
