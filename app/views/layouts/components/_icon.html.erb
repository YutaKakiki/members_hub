<div data-controller="dropdown"
     data-action="click@window->dropdown#hide touchstart@window->dropdown#hide keydown.up->dropdown#previousItem keydown.down->dropdown#nextItem keydown.esc->dropdown#hide"
     class="inline-block relative">
    <div class="p-3 xl:pr-52 flex-col">
        <button data-action="dropdown#toggle:stop" id="icon_button"> 
            <i class="fa-solid fa-circle-user text-5xl  xl:text-6xl text-gray-500"></i>
        </button>
        <div class="pl-0">
            <%= render 'layouts/components/drop_down_menu' %>
        </div>
    </div>
</div>